extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if (movies && movies.length > 0)
            each movie in movies
              .col-md-2
                .thumbnail
                  a(href="/movie/" + movie._id)
                    if movie.poster.indexOf("https:") > -1
                      img(src=movie.poster, alt=movie.title)
                    else
                      img(src="/upload/" + movie.poster, alt=movie.title)
                  .caption
                    h4 #{movie.title}
                    p
                      a.btn.btn-primary(href="/movie/" + movie._id, role="button") 观看影片
      ul.pagination
        - for (var i = 1; i <= totalPage; i++) {
            - if (currentPage == i) {
                li.active
                  span #{currentPage}
            - } 
            - else {
                li
                  a(href="results?" + query + "&page=" + i) #{i}
            - }
        - }